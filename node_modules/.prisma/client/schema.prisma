datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  budgets     Budget[] // Relacionamento inverso com Budget
  expenses    Expense[] // Relacionamento inverso com Expense
  investments Investment[] // Relacionamento inverso com Investment
}

model Budget {
  id     Int   @id @default(autoincrement())
  limit  Float
  userId Int
  User   User  @relation(fields: [userId], references: [id])
}

model Expense {
  id     Int      @id @default(autoincrement())
  amount Float
  date   DateTime
  userId Int
  User   User     @relation(fields: [userId], references: [id])
}

model Investment {
  id          Int    @id @default(autoincrement())
  amount      Float
  institution String
  userId      Int
  User        User   @relation(fields: [userId], references: [id])
}

model Notification {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  description String?
}
